@model List<WebBanHang.Models.Product>

<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <h5 class="card-header">@p.Name</h5>

                <div class="card-body">
                    <h6 class="card-title">Price: @p.Price.ToString("N0")</h6>
                </div>

                @if (!string.IsNullOrEmpty(p.ImageUrl))
                {
                    <img src="/@p.ImageUrl" class="img-fluid" /> <!-- cần có dấu / nếu ảnh nằm trong wwwroot -->
                }

                <div class="card-body d-flex justify-content-center gap-2">
                    <!-- Nút chi tiết sản phẩm -->
                    <a asp-area="Customer"
                       asp-controller="Product"
                       asp-action="Detail"
                       asp-route-id="@p.Id"
                       class="btn btn-outline-dark">
                        Detail
                    </a>

                    <!-- Nút thêm vào giỏ hàng -->
                    <a asp-area="Customer"
                       asp-controller="Cart"
                       asp-action="AddToCart"
                       asp-route-productId="@p.Id"
                       class="btn btn-outline-info">
                        Add To Cart
                    </a>
                </div>

                <div class="card-footer text-muted">
                    Category: @p.Category?.Name
                </div>
            </div>
        </div>
    }
</div>
