@model List<WebBanHang.Models.Product>

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle text-center">
        <thead class="table-primary">
            <tr class="text-uppercase">
                <th scope="col">Tên sản phẩm</th>
                <th scope="col">Giá</th>
                <th scope="col">Danh mục</th>
                <th scope="col">Hình ảnh</th>
                <th scope="col">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Name</td>
                    <td>@x.Price.ToString("N0") ₫</td>
                    <td>@x.Category?.Name</td>
                    <td>
                        @if (!string.IsNullOrEmpty(x.ImageUrl))
                        {
                            <img src="/@x.ImageUrl" alt="Hình ảnh" class="img-thumbnail" style="width: 100px; height: auto;" />
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Chưa có ảnh</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Product" asp-action="Update" asp-route-id="@x.Id" class="btn btn-sm btn-outline-success me-1">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@x.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này không?');">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
